html,
body,
#app {
  height 100%
  width 100%
  font-size 14px
  .el-table{
    th{
      background #f7f7f7 !important
    }
    td, th{
      padding 8px 0 !important
    }
  }
  .search-condition-container{
    display flex
    margin-bottom 10px
    background $color-white
    padding 10px
    box-shadow 0 0 5px #ccc
    flex-grow 0
    .el-form{
      width 100%
      .el-date-editor.el-input, .el-date-editor.el-input__inner {
        width: auto;
      }
    }
  }
  .manage-content-container{
    background $color-white
    padding 10px
    box-shadow 0 0 5px #ccc
    flex-grow 1
    position absolute
    top 62px
    bottom 45px
    box-sizing border-box
    width 100%
    .el-table{
      height 100%
    }
  }
  .el-button--text{
    padding 0 !important
  }
  .renkang-manage-index{
    width 100%
    height 100%
    .el-container{
      width 100%
      height 100%
      .el-aside{
        width 240px !important
      }
      .el-container{
        .el-header{
          height 50px !important
          background #ffffff
        }
        .el-main{
          background $color-main-background
          padding 10px
          height 100%
        }
      }
    }
  }
  .go-top{
    position fixed
    top 50%
    width 40px
    height 40px
    right 13%
    cursor pointer
    transition:all 0.5s ease-out;
  }
  .go-top:hover{
    transform:scale(1.1);
    box-shadow 0 0 5px #e7e8e9
  }
  .div-right{
    margin-right 10px
  }
  .el-dialog__body{
    padding 10px 20px !important
  }
  .selected-users{
    height 30px
    box-sizing border-box
    display flex
    margin-right 10px
    background #e7e7e7
    padding 0 5px
    border-radius 4px
    position: relative;
    margin-bottom 10px
    .close-icon{
      position: absolute;
      right -8px
      top -8px
      color #000
      cursor: pointer;
      font-size 18px
    }
  }
}

body {
  margin 0
}
